<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Contribution</h1>
        <div style=" width: 30%; margin: 35px auto;">
            <form action="/grandplans/<%= grandplan_id %>/contribution/<%=contribution._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="contribution[role]" value="<%= contribution.role %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="contribution[message]" value="<%=contribution.message%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/grandplans">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %> 